# Routes

GET   /present/:id                       controllers.CrudController.present(id: EmployeeId)
GET   /get-person/:id                    controllers.CrudController.getId(id: EmployeeId)
POST  /add-new-person                    controllers.CrudController.addNewPerson
GET   /get-pin/:id                       controllers.CrudController.getEmployeePin(id: EmployeeId)
POST  /update-pin/:id/:newData           controllers.CrudController.updatePin(id: EmployeeId, newData: String)

GET   /get-name/:id                      controllers.CrudController.getName(id: EmployeeId)
POST  /delete-person/:id                 controllers.CrudController.deletePerson(id: EmployeeId)
POST  /update-name/:id/:newData          controllers.CrudController.updateName(id: EmployeeId, newData: String)
POST  /increaseBalance/:id/:increase     controllers.MemberController.increaseBalance(id: EmployeeId, increase:Int)
POST  /decreaseBalance/:id/:decrease     controllers.MemberController.decreaseBalance(id: EmployeeId, decrease:Int)
