# Routes

GET   /present/:id                       controllers.BowsController.presentCard(id:EmployeeId)
GET   /get-person/:id                    controllers.BowsController.getId(id:EmployeeId)
POST  /add-new-person                    controllers.BowsController.addNewEmployee
POST  /update-pin/:pin/:newData          controllers.BowsController.updatePin(pin:EmployeePin, newData:String)
GET   /get-balance/:id                   controllers.BowsController.getBalance(id:EmployeeId)


GET   /get-name/:id                      controllers.BowsController.getEmployeeName(id:EmployeeId)
POST  /delete-person/:id                 controllers.BowsController.deleteEmployee(id:EmployeeId)
POST  /update-name/:id/:newData          controllers.BowsController.updateName(id:EmployeeId, newData:String)
POST  /increase-balance/:id/:increase     controllers.BowsController.increaseBalance(id:EmployeeId, increase:Int)
POST  /decrease-balance/:id/:decrease     controllers.BowsController.decreaseBalance(id:EmployeeId, decrease:Int)
